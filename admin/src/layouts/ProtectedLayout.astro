---
import Layout from './Layout.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<Layout title={title}>
  <slot />
  <script>
    import { navigate } from 'astro:transitions/client'

    if (!localStorage.getItem('token')) {
      navigate('/login')
    }
  </script>
</Layout>
