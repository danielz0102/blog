---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  variant?: 'primary' | 'secondary'
}

const { class: className, variant = 'primary', ...props } = Astro.props
---

<button
  {...props}
  class:list={[
    variant === 'primary'
      ? 'rounded bg-gray-900 px-4 py-2 text-gray-100 hover:opacity-75'
      : 'text-zinc-700 hover:opacity-50',
    'flex cursor-pointer items-center justify-center gap-2',
    className,
  ]}
>
  <slot />
</button>
