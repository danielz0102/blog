---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {}

const { class: className, ...props } = Astro.props
---

<button
  {...props}
  class:list={[
    'flex cursor-pointer items-center justify-center gap-2 rounded bg-black px-4 py-2 text-white hover:opacity-75',
    className,
  ]}
>
  <slot />
</button>
