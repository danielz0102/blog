---
import type { Post } from '@/env'
import PostInfo from './PostInfo.astro'

interface Props {
  post: Post
}

const { post } = Astro.props
---

<article>
  <div class="flex flex-col gap-1">
    <h2 class="text-2xl">
      <a href={`/posts/${post.id}`}>{post.title}</a>
    </h2>
    <PostInfo post={post} />
  </div>
</article>
