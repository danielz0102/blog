---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  dark?: boolean
}

const { dark = false, ...props } = Astro.props
---

<a
  class:list={[
    'flex items-center gap-2 hover:underline',
    dark ? 'rounded-full bg-gray-900 px-4 py-2 text-zinc-100' : 'text-zinc-700',
  ]}
  {...props}
>
  <slot />
</a>
